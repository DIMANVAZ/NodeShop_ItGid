include header

div(class='wrap')
    div(class='content')
        header(class='site-header')
            include site_header

        div(class='container')
            div(class='row')
                div(class='col col-md-12')
                    h2(class="panel-title") #{item[0]['name']}
                div(class="col col-md-4")
                    img(
                        src="/images/" + item[0]['image']
                        class="goods-big-image"
                    )
                div(class="col col-md-8")
                    p #{item[0]['description']}
                    span(class="success") Цена: #{item[0]['cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')} uah
                    button(
                        class="button-success add-to-cart"
                        data-goods_id=item[0]['id']
                    ) to cart
        include nav
    include footer